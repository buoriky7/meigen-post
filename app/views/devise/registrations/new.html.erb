<main>
  <div class="container">
    <div class="row">
      <div class="menu-head">会員登録
      </div>
      <div style="text-align: center">

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :なまえ %><br />
          <%= f.text_field :name, required: true, input_html: { autocomplete: "name" }, placeholder:"例：イチロー", class: "login-form" %>
        </div>

        <div class="field">
          <%= f.label :出身 %><br />
          <%= f.text_field :prefecture, required: true, input_html: { autocomplete: "prefecture" }, placeholder:"例：東京都", class: "login-form" %>
        </div>


        <div class="field">
          <%= f.label :性別 %><br />
          <label><%= f.radio_button :user_gender, "男性" %>男性</label>
          <label style="margin-left: 30px;"><%= f.radio_button :user_gender, "女性" %>女性</label>
        </div>


        <div class="field">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: "login-form"%>
        </div>

        <div class="field">
          <%= f.label :パスワード %>
          <% if @minimum_password_length %>
          <em>( <%= @minimum_password_length %> 文字以上 )</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" , class: "login-form"%>
        </div>

        <div class="field">
          <%= f.label :パスワード再入力 %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "login-form" %>
        </div>

        <div class="actions">
          <%= f.submit "新規登録", class: "btn btn-success active"  %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</main>
