<main>
    <div class="container">
        <div class="row">
            <div class="menu-head">新規投稿</div>


            <div class="word-new">
                <%= form_for(@word) do |f| %>



                <div class="form">
                    <p class="form-head">名言</p>
                    <%= f.text_area :sp_word %>
                </div>

                



                <div class="form">
                    <p class="form-head">発言者</p>
                    <%= f.text_field :speaker %>
                </div>


                <div class="form">
                    <p class="form-head">名言の解説</p>
                    <%= f.text_area :commentary %>
                </div>
                <div class="form">
                    <p class="form-head">イメージ</p>
                    <div style="margin-left: 45%;">
                    <%= f.attachment_field :image %></div>
                </div>



                <div class="form">
                    <p class="form-head">職業／ジャンル</p>
                    <%= f.text_field :genre %>
                </div>


                <div class="form">
                    <p class="form-head">発言者の区分</p>
                    <label><%= f.radio_button :word_flag, "著名人" %> 著名人</label>
                    <label><%= f.radio_button :word_flag, "一般人" %> 一般人</label>
                </div>





                <div class="form">
                    <p class="form-head">発言者の性別</p>
                    <label><%= f.radio_button :speaker_gender, "男性" %> 男性</label>
                    <label><%= f.radio_button :speaker_gender, "女性" %> 女性</label>
                    <label><%= f.radio_button :speaker_gender, "その他" %> その他</label>
                </div>

                <div class="submit">

                <%= f.submit '     新規投稿     ' %>
               </div>
            <% end %>
        </div>
    </div>
</div>
</main>

